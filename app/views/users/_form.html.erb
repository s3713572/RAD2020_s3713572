<%=form_for(@user,class:'form-horizontal row') do |f|%>
  <div class="form-horizontal row">
    <%=render 'shared/error_messages',object: f.object%>
    <div class="form-group">
      <%=f.label :email,class:'control-label col-sm-2'%>
      <div class="col-sm-10">
        <%=f.email_field :email,class:'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <%=f.label :password,"pass",class:'control-label col-sm-2'%>
      <div class="col-sm-10">
        <%=f.password_field :password,class:'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <%=f.label :password_confirmation,"pass",class:'control-label col-sm-2'%>
      <div class="col-sm-10">
        <%=f.password_field :password_confirmation,class:'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <%=f.label :mobile,class:'control-label col-sm-2'%>
      <div class="col-sm-10">
        <%=f.text_field :mobile,class:'form-control'%>
      </div>
    </div>

    <%=f.submit yield(:button_text),class:"btn btn-primary"%>
  </div>
<%end%>