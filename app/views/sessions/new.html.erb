<%provide(:title,"Log in")%>
<div class="row">
  <div class="col-md-6 col-md-offset-3 sign-content">
    <h1>Login</h1>

    <%=form_for(:session,url: login_path) do |f|%>
      <div class="form-horizontal">
        <div class="form-group">
          <%=f.label :email,class:'control-label col-sm-2'%>
          <div class="col-sm-10">
            <%=f.email_field :email,class:'form-control'%>
          </div>
        </div>
        <div class="form-group">
          <%=f.label :password,class:'control-label col-sm-2'%>
          <div class="col-sm-10">
            <%=f.password_field :password,class:'form-control'%>
          </div>
        </div>

        <%=f.label :remember_me,class:"checkbox inline" do%>
          <%=f.check_box :remember_me,class:'form-control'%>
          <span>Remember me on this computer</span>
        <%end%>
          <%=f.submit "Log in",class:"btn btn-success btn-lg"%>
        <%end%>
        <%=link_to "register", signup_path, class:'pull-right'%>
      </div>
  </div>
</div>

<style>
  body{
    background-color: gray;
  }
  .sign-content{
    background-color: white;
    padding: 30px;
    border-radius: 5px;
    margin-top: 80px;
  }
  h1{
    padding-bottom:50px;
  }
</style>